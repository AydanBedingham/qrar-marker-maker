{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "settings": {
        "react": {
        "version": "detect"
        }
    },
    "overrides": [
        {
            "files": [
            "**/*.spec.js",
            "**/*.spec.jsx"
            ],
            "env": {
            "jest": true
            }
        }
    ],
    "rules": {
        "no-unused-vars": "off"
    }
}
